<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cal">
	<!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
	<!-- suggestion_ver2 -->
	<select id="totalClassifyList" parameterType="int" resultType="calVO">
		select * from calendar where fday = #{value}
	</select>
	<select id="weekList" parameterType="int" resultType="String">
		select fname from calendar where fweek = #{value}
	</select>
	<!-- statistic -->
	<select id="monthList" parameterType="int" resultType="calVO">
		select * from calendar where fmonth = #{value}
	</select>
	<select id="userList" parameterType="calVO" resultType="calVO">
		select * from calendar where fmonth = #{fmonth} and id = #{id}
	</select>
</mapper>